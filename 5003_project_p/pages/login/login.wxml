<!--pages/login/login.wxml-->
<view class="container">
  <view class="login-wrapper">
    <!-- Logo区域 -->
    <view class="logo-section">
      <view class="logo" style="position: relative; left: -1rpx; top: 0rpx">🚗</view>
      <text class="app-name">校园拼车</text>
      <text class="app-slogan">让出行更便捷</text>
    </view>

    <!-- 功能介绍 -->
    <view class="features">
      <view class="feature-item">

      </view>
      <view class="feature-item">
        <view class="feature-icon" style="position: relative; left: -124rpx; top: 3rpx">⚡</view>
        <text class="feature-text" style="position: relative; left: -130rpx; top: 1rpx">快速匹配\n即时沟通</text>
      </view>
      <view class="feature-item">
        <view class="feature-icon">💰</view>
        <text class="feature-text">拼车出行\n省钱省心</text>
      </view>
    </view>

    <!-- 登录按钮 -->
    <view class="login-section">
      <button 
        wx:if="{{canIUseGetUserProfile}}"
        class="login-btn"
        bindtap="getUserProfile"
       style="position: relative; left: 1rpx; top: 0rpx">
        <text class="wechat-icon">💬</text>
        微信快速登录
      </button>
      
      <view class="login-tips">
        登录即代表同意《用户协议》和《隐私政策》
      </view>
    </view>
  </view>
</view>