/* pages/login/login.wxss */
.container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #1AAD19 0%, #13ce66 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-wrapper {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #ffffff;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 功能介绍 */
.features {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 120rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  font-size: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-text {
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  line-height: 1.5;
  white-space: pre-line;
}

/* 登录区域 */
.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 600rpx;
  height: 88rpx;
  background-color: #ffffff;
  color: #1AAD19;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-btn::after {
  border: none;
}

.wechat-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.login-tips {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}